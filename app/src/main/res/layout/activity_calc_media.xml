<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calcMedia">

    <TextView
        android:id="@+id/textViewMediaCM"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:text="Media Final:"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewMediaOut"
        app:layout_constraintEnd_toEndOf="@+id/textViewNomeCM"
        app:layout_constraintStart_toStartOf="@+id/textViewNomeCM"
        app:layout_constraintTop_toBottomOf="@+id/textViewNomeOut" />

    <TextView
        android:id="@+id/textViewFreqCM"
        android:layout_width="127dp"
        android:layout_height="0dp"
        android:layout_marginStart="40dp"
        android:text="FrequÃªncia:"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewfreqOut"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMediaOut" />

    <TextView
        android:id="@+id/textViewMediaOut"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewFreqCM"
        app:layout_constraintEnd_toEndOf="@+id/textViewFreqCM"
        app:layout_constraintStart_toStartOf="@+id/textViewFreqCM"
        app:layout_constraintTop_toBottomOf="@+id/textViewMediaCM" />

    <TextView
        android:id="@+id/textViewNomeCM"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="1dp"
        android:text="Nome:"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewNomeOut"
        app:layout_constraintEnd_toEndOf="@+id/textViewMediaOut"
        app:layout_constraintStart_toStartOf="@+id/textViewCondicao"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewNomeOut"
        android:layout_width="330dp"
        android:layout_height="33dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewMediaCM"
        app:layout_constraintEnd_toEndOf="@+id/textViewMediaCM"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewNomeCM"
        app:layout_constraintTop_toBottomOf="@+id/textViewNomeCM" />

    <TextView
        android:id="@+id/textViewfreqOut"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="31dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewCondicao"
        app:layout_constraintEnd_toEndOf="@+id/textViewMediaCM"
        app:layout_constraintStart_toStartOf="@+id/textViewCondicao"
        app:layout_constraintTop_toBottomOf="@+id/textViewFreqCM" />

    <TextView
        android:id="@+id/textViewCondicao"
        android:layout_width="352dp"
        android:layout_height="47dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="392dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewfreqOut" />

</androidx.constraintlayout.widget.ConstraintLayout>