<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewFreq"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Frequência:"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextFreq"
        app:layout_constraintEnd_toEndOf="@+id/editTextNota2"
        app:layout_constraintStart_toStartOf="@+id/editTextNota2"
        app:layout_constraintTop_toBottomOf="@+id/editTextNota2" />

    <EditText
        android:id="@+id/editTextNota1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="13dp"
        android:contentDescription="nota 1"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/textViewNota2"
        app:layout_constraintEnd_toEndOf="@+id/editTextFreq"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNota1"
        tools:ignore="TouchTargetSizeCheck,EditableContentDescCheck" />

    <EditText
        android:id="@+id/editTextNome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="7dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/textViewNota1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNome"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="73dp"
        android:layout_marginBottom="249dp"
        android:onClick="onClick"
        android:text="Situação Final"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/editTextFreq"
        app:layout_constraintTop_toBottomOf="@+id/editTextFreq" />

    <TextView
        android:id="@+id/textViewNota2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="31dp"
        android:text="Nota 2:"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextNota2"
        app:layout_constraintEnd_toEndOf="@+id/editTextNota2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNota1" />

    <TextView
        android:id="@+id/textViewNome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="51dp"
        android:text="Nome:"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextNome"
        app:layout_constraintEnd_toEndOf="@+id/textViewNota1"
        app:layout_constraintStart_toStartOf="@+id/editTextNome"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewNota1"
        android:layout_width="121dp"
        android:layout_height="0dp"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="47dp"
        android:text="Nota 1:"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextNota1"
        app:layout_constraintEnd_toEndOf="@+id/editTextNota1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNome" />

    <EditText
        android:id="@+id/editTextFreq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="61dp"
        android:contentDescription="Frequência"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintStart_toStartOf="@+id/textViewFreq"
        app:layout_constraintTop_toBottomOf="@+id/textViewFreq"
        tools:ignore="TouchTargetSizeCheck,EditableContentDescCheck" />

    <EditText
        android:id="@+id/editTextNota2"
        android:layout_width="143dp"
        android:layout_height="0dp"
        android:layout_marginStart="41dp"
        android:contentDescription="nota 2"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/textViewFreq"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNota2"
        tools:ignore="TouchTargetSizeCheck,EditableContentDescCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>